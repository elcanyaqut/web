    const messages = [
      "Selfie çəkməyi unutma, bura ən gözəl xatirələrin yeridir 📸✨",
      "Bu gecənin sehrini gülüşünlə tamamla 🌸😊",
      "Ən gözəl xatirələr dostlarla yazılır 💕",
      "Rəqs meydanına çıx və heç nəyi düşünmə 💃🔥",
      "Bir gülüşünlə məclisi işıqlandır ✨🌟",
      "Xatirə üçün ən gözəl anı indi yaşa ❤️",
      "Bu günün fotoları sabahın ən dəyərli xatirəsi olacaq 📷✨",
      "Parıltını özünlə gətirmisən, bizə də pay ver 🌈💖",
      "Hər dostluq belə anlarla möhkəmlənir 🤍",
      "Sən gəlmisənsə, məclis artıq rənglidir 🎉🌸",
      "Bu gecə çox gül, çox rəqs et və çox xatirə saxla 💃📸",
      "Dostlarla çəkilən hər foto bir ömürlük hekayədir 💕📷",
      "Bu anı paylaş, gələcəkdə gülərək xatırla ✨😊",
      "Xına gecəsinin sehrini sən tamamlayırsan 🌟💖",
      "Unutma, bu günün xatirəsi sabah danışılacaq ən gözəl hekayədir 💌✨"
    ];

    let msgIndex = localStorage.getItem("xina_msg");
    if (msgIndex === null) {
      msgIndex = Math.floor(Math.random() * messages.length);
      localStorage.setItem("xina_msg", msgIndex);
    }

    document.getElementById("message").textContent = messages[msgIndex];
